Proceso Piramide
	
	Definir lado, altura, Volumen_original, volumen_replica Como Real;
	
	Escribir ("Digite lado de la base en metros: ");
	Leer lado;
	
	Escribir ("Digite altura en metros: ");
	Leer  altura;
	
	Volumen_original <-( lado ^ 2 /3);
	
	volumen_replica <- Volumen_original/50;
	
	Escribir ("Usted debe comprar los siguentes M3 de arena");
	Escribir (volumen_replica);
	
FinProceso
